<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnEsp1"
            android:text="ESP32-01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnEsp2"
            android:text="ESP32-02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnEsp3"
            android:text="ESP32-03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IoT Power Monitoring"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Real-time Metrics -->
        <TextView
            android:id="@+id/txtVoltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltage: -- V"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF6B6B"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current: -- A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4ECDC4"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power: -- W"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFE66D"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relay: --"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Relay Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnOn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ðŸŸ¢ ON"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnOff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ”´ OFF"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Charts Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltage Trend"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartVoltage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Trend"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartCurrent"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power Trend"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartPower"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>